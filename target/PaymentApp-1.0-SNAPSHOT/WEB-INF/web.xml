<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <display-name>Archetype Created Web Application</display-name>
    <welcome-file-list>
        <welcome-file>authorization.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.PaymentApp.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.PaymentApp.filters.RoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/SignIn</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.PaymentApp.filters.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/SignIn</url-pattern>
    </filter-mapping>




</web-app>